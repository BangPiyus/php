<?php

	include "bampi-include-koneksi.php";

	$json_array = array();

	$ambil = $koneksi->query(" SELECT pelanggan_wa AS no_telpon,pelanggan_nama,pelanggan_email,pelanggan_id FROM pelanggan ");

	if ($ambil->num_rows > 0) {
    while ($row = $ambil->fetch_assoc()) {
	        $json_array[] = $row;
	    }
	} else {
	    echo "0 results";
	}
	header('Content-Type: application/json'); 
	echo json_encode($json_array);
	$koneksi->close();

?>
